{
  "name": "js-factorial",
  "version": "1.0.0",
  "description": "An HTML5 app to calculate factorial from a given number",
  "scripts": {
    "coveralls": "cat ./build/test/coverage/**/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test": "karma start karma.conf.js --single-run --browsers HeadlessFirefox",
    "tdd": "karma start karma.conf.js --browsers FirefoxDeveloper --reporters progress",
    "test-crossbrowser": "karma start karma.conf.js --single-run --browsers Chrome,Firefox",
    "start": "browser-sync app/ --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edysegura/js-factorial.git"
  },
  "author": "Edy Segura",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/edysegura/js-factorial/issues"
  },
  "homepage": "https://github.com/edysegura/js-factorial#readme",
  "devDependencies": {
    "browser-sync": "^2.26.0",
    "coveralls": "^3.0.2",
    "jasmine-core": "^2.99.1",
    "karma": "^3.0.0",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.0.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-fixture": "^0.2.6",
    "karma-html-reporter": "^0.2.7",
    "karma-html2js-preprocessor": "^1.0.0",
    "karma-jasmine": "^1.0.2"
  }
}
